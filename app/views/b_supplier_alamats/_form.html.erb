
<div id="supplierModal">
  <!-- Modal -->
  <div id="formSupplierModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <%= form_for b_supplier_alamat, url: url_for(controller: controller, action: action, b_supplier_id: b_supplier.id), html: { class: 'form-horizontal' } do |f| %>
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
        <h3 id="myModalLabel"><%= title %></h3>
      </div>
      <div class="modal-body">
        <table class="table-bordered" align="center" width="100%">
                    <tr>
                      <th align="left">&nbsp;Kode Alamat</th>
                      <th align="center">:</th>
                      <th align="left"><%= f.text_field :kode_alamat, :style => "width:300px" , class: :required %></th>
                    </tr>
                    <tr>
                      <th align="left">&nbsp;Kode Supplier</th>
                      <th align="center">:</th>
                      <th align="left"><%= f.text_field :kode, :style => "width:300px", readonly: @read_only_key, class: :required %></th>
                    </tr>
                    <tr>
                      <th align="left">&nbsp;Kode Kategori</th>
                      <th align="center">:</th>
                      <th align="left"><%= f.text_field :kode_kategori, :style => "width:300px", class: :required %></th>
                    </tr>
                    <tr>
                      <th align="left">&nbsp;Alamat</th>
                      <th align="center">:</th>
                      <th align="left"><%= f.text_field :alamat_title, :style => "width:300px", class: :required %></th>
                    </tr>
                    <tr>
                      <th align="left">&nbsp;</th>
                      <th align="center">:</th>
                      <th align="left"><%= f.text_field :alamat_01, :style => "width:300px", class: :required %></th>
                    </tr>
                    <tr>
                      <th align="left">&nbsp;</th>
                      <th align="center">:</th>
                      <th align="left"><%= f.text_field :alamat_02, :style => "width:300px", class: :required %></th>
                    </tr>
                    <tr>
                      <th align="left">&nbsp;Negara</th>
                      <th align="center">:</th>
                      <th align="left"><%= f.text_field :id_negara, :style => "width:300px", class: :required %></th>
                    </tr>
                    <tr>
                      <th align="left">&nbsp;Provinsi</th>
                      <th align="center">:</th>
                      <th align="left"><%= f.text_field :id_provinsi, :style => "width:300px", class: :required %></th>
                    </tr>

                    <tr>
                      <th align="left">&nbsp;Kota</th>
                      <th align="center">:</th>
                      <th align="left">&nbsp;<%= f.select :id_kota, options_from_collection_for_select(a_cities, 'kode', 'nama', :id_kota), {include_blank: true}, :style => "width:92px",disabled: @disabled_combo, class: :required %>
                      </th>
                    </tr>       
                    <tr>
                      <th align="left">&nbsp;Kode Pos</th>
                      <th align="center">:</th>
                      <th align="left"><%= f.text_field :kode_pos, :style => "width:300px", class: :required %></th>
                    </tr>   
                    <tr>
                      <th align="left">&nbsp;Telepon</th>
                      <th align="center">:</th>
                      <th align="left"><%= f.text_field :telepon, :style => "width:300px", class: :required %></th>
                    </tr>   
                    <tr>
                      <th align="left">&nbsp;Fax</th>
                      <th align="center">:</th>
                      <th align="left"><%= f.text_field :fax, :style => "width:300px", class: :required %></th>
                    </tr>    
                    <tr>
                      <th align="left">&nbsp;Status</th>
                      <th align="center">:</th>
                      <th align="left"><%= f.text_field :st_progress, :style => "width:300px", class: :required %></th>
                    </tr>                                                                                              
        </table>

      </div>
      <div class="modal-footer">
        <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
        <% if action_type == 'Delete' %>
          <%= link_to action_type, b_supplier_b_supplier_alamat_path(b_supplier, b_supplier_alamat), method: :delete, confirm: 'Are you sure?', class: 'btn btn-primary'  %>
        <% else %>
          <button class="btn btn-primary"><%= action_type %></button>
        <% end %>
      </div>
    <% end %>
  </div>
</div>