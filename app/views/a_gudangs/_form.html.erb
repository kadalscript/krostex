<%= form_for(@a_gudang) do |f| %>
<table class="table-bordered" align="center" width="60%">
  <tr class="titleJudulTable">
    <th colspan="3">
      <%= title %>
    </th>  
  </tr>
  <% if @a_gudang.errors.any? %>
  <tr>
    <th colspan="3" align="center">    
      <table class="tableError">
        <tr class="trTitleError">
          <th align="left"> 
           <%= pluralize(@a_gudang.errors.count, "Kesalahan") %> dalam pengisian data Gudang. sebagai berikut &nbsp;:&nbsp;
         </th>
       </tr>
       <%
       nomorUrutErr       = 0
       @a_gudang.errors.full_messages.each do |msg| 
        nomorUrutErr += 1 ;
        %>
        <tr> 
          <th align="left">&nbsp;<%= nomorUrutErr %>.&nbsp;&nbsp;<%= msg %></th>
        </tr>
        <% end %>
      </table>  
    </th>
  </tr>
  <% end %>
  <% if not action_name.eql?('new') %>
  <tr>
   <th colspan="3">
     <%= link_to 'Tambah', new_a_gudang_path  %> |
     <% if @a_gudang.id %>
     <%= link_to 'Koreksi', edit_a_gudang_path(@a_gudang) %> |
     <% end %>
     <%= link_to 'Hapus', :controller => a_gudangs_path, :action =>"destroy_show", :id => @a_gudang.id %> |
   </th> 
 </tr>
 <% end %>
 <tr>
   <th align="left">
     &nbsp;Kode
   </th>  
   <th align="center"> 
     :
   </th>
   <th align="left"> 
     <%= f.text_field :simbol, :style => "width:300px", class: :required %>
   </th> 
 </tr>
 <tr>
   <th align="left">
     &nbsp;Nama Gudang
   </th>  
   <th align="center"> 
     :
   </th>
   <th align="left"> 
     <%= f.text_field :nama, :style => "width:300px", class: 'required' %>
   </th> 
 </tr>
 <tr>
   <th align="left">
     &nbsp;Status
   </th>  
   <th align="center"> 
     :
   </th>
   <th align="left"> 
    <%= f.select(:st_progress, [["Active", "Active"], ["Closed","Closed"]], {}, :style => "width:314px")  %>
  </th> 
</tr>  
<tr>
 <th align="left">
   &nbsp;Opr Input
 </th>  
 <th align="center"> 
   :
 </th>
 <th align="left"> 
  <%= f.text_field :update_by, :style => "width:300px", class: 'required' %>
</th> 
</tr>  
<tr>
  <th colspan="3" class="titleJudulTable" width="100%">
    <%= f.submit "Simpan", class: :btn unless action_name.eql?('destroy_show')  %>
    <%= link_to "Hapus", a_gudang_path(@a_gudang.id), method: :delete, class: :btn, confirm: "Hapus data?" if action_name.eql?('destroy_show') %>
    <%= link_to "Tutup", "#", onclick: "is_tutup_form_a_gudang()", class: :btn %>
  </th>
</tr>
</table>
<% end %>

<input type="hidden" id="a_gudang_url_back" name="a_gudang_url_back" value="<%= a_gudangs_path %>">


