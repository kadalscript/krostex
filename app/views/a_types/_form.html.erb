<%= form_for(@a_type) do |f| %>
  <table class="table-bordered" align="center" width="60%">
    <tr class="titleJudulTable"><th colspan="3"><%= title %></th></tr>
    <%= render template: "/shared/errors", errors: @a_type.errors if @a_type.errors.any? %>
    <%= render partial: "navigator" if action_name.eql?'show' %>
    <%#= render partial: "columns", locals: { f: f, attribute: @attributes } %>
    <tr>
      <th align="left">
       &nbsp;Department
      </th>  
      <th align="center"> 
       :
      </th>
      <th align="left"> 
       <%= f.select :id_department, options_from_collection_for_select(@a_departments, 'kode', 'nama', @a_type.id_department), {}, style: "width:313px", disabled: @disabled, class: :required %>
      </th> 
    </tr>
    <tr>
      <th align="left">
        &nbsp;Golongan
      </th>  
      <th align="center"> 
        :
      </th>
      <th align="left"> 
        <%= f.select :id_golongan, options_from_collection_for_select(@a_golongans, 'kode', 'nama', @a_type.id_department), {}, style: "width:313px", disabled: @disabled,  class: :required %>
      </th> 
    </tr>
    <tr>
      <th align="left">
        &nbsp;Kode
      </th>  
      <th align="center"> 
        :
      </th>
      <th align="left"> 
        <%= f.text_field :kode, :style => "width:300px", readonly: @read_only_always, class: :required %>
      </th> 
    </tr>
    <tr>
      <th align="left">
        &nbsp;Nama
      </th>  
      <th align="center"> 
        :
      </th>
      <th align="left"> 
        <%= f.text_field :nama, :style => "width:300px", readonly: @read_only, class: :required %>
      </th> 
    </tr>
    <tr>
      <th align="left">
        &nbsp;Simbol
      </th>  
      <th align="center"> 
        :
      </th>
      <th align="left"> 
        <%= f.text_field :simbol, :style => "width:300px", readonly: @read_only, class: :required %>
      </th> 
    </tr>
    <tr>
      <th colspan="3" class="titleJudulTable" width="100%">
        <%= f.submit "Simpan", class: :btn, confirm: "Simpan Data?" unless ['destroy_show','show'].include?(action_name)  %>
        <%= link_to "Hapus", a_type_path(@a_type), method: :delete, class: :btn, confirm: "Hapus data?" if action_name.eql?('destroy_show') %>
        <%= link_to "Tutup", "javascript:void(0)", onclick: "closingForm()", class: :btn %>
      </th>
    </tr>
  </table>
<% end %>
<%= hidden_value(a_types_path) %>
