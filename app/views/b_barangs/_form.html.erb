<%= form_for(@b_barang) do |f| %>
  <table class="table-bordered" align="center" width="60%">
    <tr class="titleJudulTable"><th colspan="3"><%= title %></th></tr>
    <%= render partial: "shared/common_errors", locals: { object: @b_barang } if @b_barang.errors.any? %>
    <%= render partial: "navigation" unless action_name == 'new' %>
    <%#= render partial: "columns", locals: { f: f, attributes: @attributes } %>
    <tr>
      <th align="left">
        &nbsp;Kode Barang
      </th>  
      <th align="center"> 
        :
      </th>
      <th align="left"> 
        <%= f.text_field :kode, :style => "width:300px", class: :required %>
      </th> 
    </tr>
    <tr>
      <th align="left">
        &nbsp;Nama Barang
      </th>  
      <th align="center"> 
        :
      </th>
      <th align="left"> 
        <%= f.text_field :nama, :style => "width:300px", class: :required %>
      </th> 
    </tr>
    <tr>
      <th align="left">
       &nbsp;Department
      </th>  
      <th align="center"> 
       :
      </th>
      <th align="left"> 
       <%= f.select :id_department, options_from_collection_for_select(@a_departments, 'kode', 'nama', @b_barang.id_department), {}, class: :required %>
      </th> 
    </tr>
    <tr>
      <th align="left">
        &nbsp;Golongan
      </th>  
      <th align="center"> 
        :
      </th>
      <th align="left"> 
        <%= f.select :id_golongan, options_from_collection_for_select(@a_golongans, 'kode', 'nama', @b_barang.id_department), {include_blank: true}, class: :required, readonly: true %>
      </th> 
    </tr>
    <tr>
      <th align="left">
        &nbsp;Jenis
      </th>  
      <th align="center"> 
        :
      </th>
      <th align="left"> 
        <%= f.select :id_type, options_from_collection_for_select(@a_types, 'kode', 'nama', @b_barang.id_department), {include_blank: true}, class: :required, readonly: true %>
      </th> 
    </tr>
    <tr>
      <th align="left">
       &nbsp;Level 4
      </th>  
      <th align="center"> 
       :
      </th>
      <th align="left"> 
       <%= f.select :id_level_four, options_from_collection_for_select(@a_level_fours, 'kode', 'nama', @b_barang.id_level_four), {include_blank: true}, class: :required, readonly: true %>
      </th> 
    </tr>
    <tr>
      <th colspan="3" class="titleJudulTable" width="100%">
        <%= f.submit "Simpan", class: :btn unless action_name.eql?('destroy_show')  %>
        <%= link_to "Hapus", b_barang_path(@b_barang), method: :delete, class: :btn, confirm: "Hapus data?" unless ["create", "new"].include?(action_name) %>
        <%= link_to "Tutup", "javascript:void(0)", onclick: "closingForm()", class: :btn %>
      </th>
    </tr>
  </table>
<% end %>
<%= hidden_value(b_barangs_path) %>