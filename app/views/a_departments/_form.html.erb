<%= form_for(@a_department) do |f| %>
  <table class="table-bordered" align="center" width="60%">
    <tr class="titleJudulTable"><th colspan="3"><%= @form_title %></th></tr>
    <%= render template: "/shared/errors", errors: @a_department.errors if @a_department.errors.any? %>
    <%= render partial: "navigator" if action_name.eql?'show' %>
    <%= render partial: "columns", locals: { f: f, attributes: @attributes } %>
    <tr>
      <th colspan="3" class="titleJudulTable" width="100%">
        <%= f.submit "Simpan", class: :btn, confirm: "Simpan Data?" unless ['show','destroy_show'].include?(action_name)  %>
        <%= link_to "Hapus", a_department_path(@a_department), method: :delete, class: :btn, confirm: "Hapus data?" if action_name.eql?('destroy_show') %>
        <%= link_to "Tutup", "javascript:void(0)", onclick: "closingForm()", class: :btn %>
      </th>
    </tr>
  </table>
<% end %>
<%= hidden_value(a_departments_path) %>

<script>
       $("#a_department_kode").attr("readonly","true");
</script>