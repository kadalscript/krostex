<!-- Modal -->
<%= form_tag(m_beli_po_first_h_m_beli_po_second_d_path(@m_beli_po_first_h, ""), method: :put, class: 'form-horizontal', id: 'editing_form') do %>
  <div id="edit" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
      <h3 id="myModalLabel">Edit</h3>
    </div>
    <div class="modal-body">
      <% ["kode_barang", "nama_barang", "qty_kemasan", "kemasan_id", "qty", "harga", "diskon", "total_kurang_diskon"].each do |item| %>
        <div class="control-group">
          <%= label_tag "edit[#{item}]", item == 'qty2' ? 'Qty' : item.gsub('_', ' ').titleize, class: 'control-label' %>
          <div class="controls">
            <% if item == 'kemasan_id' %>
              <%= select_tag('edit[id_satuan_kemasan]', options_for_select(AKemasan.all.collect { |kemasan| [ kemasan.nama, kemasan.id ] } )) %>
            <% elsif (item == 'kode_barang' || item == 'nama_barang') %>
              <%= text_field_tag "#{item}", "", disabled: 'disabled' %>
            <% else %>
              <%= text_field_tag "edit[#{item}]", "" %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
    <div class="modal-footer">
      <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
      <button class="btn btn-primary">Update</button>
    </div>
  </div>
<% end %>
