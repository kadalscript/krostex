<!-- List banks -->
<table class="table table-bordered table-hover" width="60%" align="center">
  <thead class="thead">
    <tr class="titleJudul" style="font-size : 12pt"><th align="center" colspan="11"><%= form_title(action_name, @title) %></th></tr>
    <tr class="blankSpot">
      <th colspan="11" align="left">&nbsp;
        <%= link_to ADD, new_a_bank_path, class: "navigasi btn" %>
        <a id="searchLink" class="navigasi btn" href="javascript:void(0)" style="float:right"><%= SEARCH %></a>
      </th>
    </tr>
    <tr class="titleJudulTable">
      <th>Kode</th>
      <th>Nama</th>
      <th>Negara</th>
      <th>Kota</th>
    </tr>
  </thead>
  <% if @banks.count > 0 %>
    <!-- Listing data -->
    <% @banks.each do |bank| %>
      <tr onclick="redirectTo('<%= a_bank_path(a_bank.id) %>')">
        <th align="left">&nbsp; Isi kolum</th>
      </tr>
    <% end %>
    <!-- Listing data -->
  <% else %>
    <!-- Showing empty data -->
    <tr><td colspan="4" style="text-align: center"><%= EMPTY_DATA %></td></tr>
    <!-- Showing empty data -->
  <% end %>
  <!-- Paginating -->
  <thead class="thead">
    <tr class="titleJudulTable">
      <th colspan="11" align="right">
        <%= paginate @banks %>
      </th>
    </tr>
  </thead>
  <!-- Paginating -->
</table>
<!-- List banks -->
<!-- Back button -->
<%= link_to BACK, a_cities_path, class: 'btn btn-success' if action_name == 'search' %>
<!-- Back button -->