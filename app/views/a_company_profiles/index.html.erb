<table class="table table-bordered table-hover" width="60%" align="center">
  <thead class="thead">
    <tr class="titleJudul" style="font-size : 12pt">
      <th align="center" colspan="11">DAFTAR COMPANY PROFILE</th>
    </tr>
    <tr class="blankSpot">
      <th colspan="11" align="left">&nbsp;
        <%= link_to 'Tambah Data', new_a_company_profile_path, :class => "navigasi btn" %>
        <a id="searchLink" class="navigasi btn" href="javascript:void(0)" style="float:right">Cari Data</a>
      </th>
    </tr>
    <tr class="titleJudulTable">
      <% ACompanyProfile.column_names.each do |column_name| %>
        <% unless ["id", "created_at", "updated_at", "alamat_01", "alamat_02", "alamat_03"].include?(column_name) %>
          <th><%= company_profile_column(column_name).titleize %></th>
        <% end %>
      <% end %>
    </tr>
  </thead>
  <% @a_company_profiles.each do |a_company_profile| %>
    <tr onclick="redirectTo('<%= a_company_profile_path(a_company_profile) %>')">
      <td><%= a_company_profile.kode %></td>
      <td><%= a_company_profile.nama_company %></td>
      <td><%= a_company_profile.contact_person %></td>
      <td><%= showing_alamat(a_company_profile) %></td>
      <td><%= a_company_profile.telepon %></td>
      <td><%= a_company_profile.fax %></td>
      <td><%= a_company_profile.email %></td>
      <td><%= a_company_profile.homepage %></td>
    </tr>
  <% end %>
  <thead class="thead">
    <tr class="titleJudulTable">
      <th colspan="11" align="right">
        <%= paginate @a_company_profiles %>
      </th>
    </tr>
  </thead>
</table>

<!-- Modal -->
<div id="searchModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <%= form_tag a_company_profiles_search_path, method: :get, class: 'form-horizontal' do %>
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
      <h3 id="myModalLabel">Search company profile</h3>
    </div>
    <div class="modal-body">
      <% ACompanyProfile.column_names.each do |column_name| %>
        <% unless ["id", "created_at", "updated_at"].include?(column_name) %>
          <div class="control-group">
            <%= label_tag column_name, column_name.gsub('_', ' ').titleize, class: 'control-label' %>
            <div class="controls">
              <%= text_field_tag column_name %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
    <div class="modal-footer">
      <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
      <button class="btn btn-primary">Search</button>
    </div>
  <% end %>
</div>

<%= link_to "Back", a_company_profiles_path, class: 'btn btn-success' if action_name == 'search' %>

<script>
$(function() {
  $('#searchLink').click(function() {
    $('#searchModal').modal();
  });
});
</script>