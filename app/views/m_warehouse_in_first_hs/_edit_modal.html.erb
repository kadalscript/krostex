<!-- Modal -->
<%= form_tag(m_warehouse_in_first_h_m_warehouse_in_second_d_path(@m_warehouse_in_first_h, ""), method: :put, class: 'form-horizontal', id: 'editing_form') do %>
  <div id="edit" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
      <h3 id="myModalLabel">Edit</h3>
    </div>
    <div class="modal-body">
      <div class="control-group">
        <%= label_tag :kode_barang, "Kode Barang", class: 'control-label' %>
        <div class="controls">
          <%= text_field_tag :kode_barang, "", disabled: 'disabled' %>
        </div>
      </div>
      <div class="control-group">
        <%= label_tag :nama_barang, "Nama Barang", class: 'control-label' %>
        <div class="controls">
          <%= text_field_tag :nama_barang, "", disabled: 'disabled' %>
        </div>
      </div>
      <div class="control-group">
        <%= label_tag :qty, "Qty", class: 'control-label' %>
        <div class="controls">
          <%= text_field_tag :qty, "" %>
        </div>
      </div>
      <div class="control-group">
        <%= label_tag :satuan, "Satuan", class: 'control-label' %>
        <div class="controls">
          <%= select(:satuan, :id, ASatuan.all.collect { |satuan| [ satuan.nama, satuan.id ] }) %>
        </div>
      </div>
      <div class="control-group">
        <%= label_tag :no_lot, "No Lot", class: 'control-label' %>
        <div class="controls">
          <%= text_field_tag :no_lot, "" %>
        </div>
      </div>
      <div class="control-group">
        <%= label_tag :harga, "Harga", class: 'control-label' %>
        <div class="controls">
          <%= text_field_tag :harga, "" %>
        </div>
      </div>
    </div>
    <div class="modal-footer">
      <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
      <button class="btn btn-primary">Update</button>
    </div>
  </div>
<% end %>
