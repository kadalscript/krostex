<% if params[:index] == 'true' %>
  <% if @a_negara.blank? %>
    $('#id_provinsi').html('<%= escape_javascript(select_tag("id_provinsi", options_for_select(""), prompt: "- Provinsi -")) %>')
  <% else %>
    $('#id_provinsi').html('<%= escape_javascript(select_tag("id_provinsi", options_for_select(@a_negara.a_provinsis.collect {|provinsi| [ provinsi.nama, provinsi.id ] }), prompt: "- Provinsi -")) %>')
  <% end %>
<% else %>
  <% if @a_negara.blank? %>
    $('#a_city_id_provinsi').html('<%= escape_javascript(select("a_city", "id_provinsi", "", { include_blank: "- Provinsi -" }, @select_box_attr)) %>')
  <% else %>
    $('#a_city_id_provinsi').html('<%= escape_javascript(select("a_city", "id_provinsi", @a_negara.a_provinsis.collect { |provinsi| [ provinsi.nama, provinsi.id ] }, { include_blank: "- Provinsi -" })) %>')
  <% end %>
<% end %>